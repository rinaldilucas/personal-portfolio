<section id="{{resources.about.id}}" data-anchor-scroll="{{resources.about.id}}" class="about">
  <div class="about__wrapper">
    <h2 class="about__title wow animated fadeIn" data-wow-delay="0.1s">{{resources.about.title}}</h2>
    <div class="spacer" data-height="60"></div>
    <div class="about__content">
      <div class="about__image wow animated fadeIn" data-wow-delay="0.1s">
        <img loading="lazy" src="./assets/images/general/persona.svg" alt="{{resources.general.name}}">
        <div class="spacer only-mobile" data-height="30"></div>
      </div>
      <div class="about__baloon wow animated fadeIn" data-wow-delay="0.3s">
        <div class="about__baloon-text">
          <p>{{{resources.about.description}}}</p>
          <div class="spacer only-mobile" data-height="30"></div>
        </div>
        <div class="about__progress">
          <div class="about__progress-item">
            <div class="about__progress-text">
              <h4>Front-end</h4>
              <span>{{resources.about.value-frontend}}%</span>
            </div>
            <div class="about__progress-background">
              <div class="about__progress-bar" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="{{resources.about.value-frontend}}" data-color="#FFD15C"></div>
            </div>
            <div class="spacer" data-height="20"></div>
          </div>
          <div class="about__progress-item">
            <div class="about__progress-text">
              <h4>Back-end</h4>
              <span>{{resources.about.value-backend}}%</span>
            </div>
            <div class="about__progress-background">
              <div class="about__progress-bar" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="{{resources.about.value-backend}}" data-color="#417dc7"></div>
            </div>
            <div class="spacer" data-height="20"></div>
          </div>
          <div class="about__progress-item">
            <div class="about__progress-text">
              <h4>Databases</h4>
              <span>{{resources.about.value-databases}}%</span>
            </div>
            <div class="about__progress-background">
              <div class="about__progress-bar" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="{{resources.about.value-databases}}" data-color="#FF4C60"></div>
            </div>
            <div class="spacer" data-height="20"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
